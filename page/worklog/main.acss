.table{
  border: 1px solid #ccc;
  display:flex;
  align-items: center;
  justify-content: space-around;
}

.table > view{
  height: 30px;
  display:flex;
  align-items: center;
  justify-content: space-around;
}

.table > view + view{
  border-left: 1px solid #ccc;
}

.worklog_title{
  font-size: 16px;
  font-family: 'Microsoft YaHei';
}
.date_input{
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  text-align: center;
  font-size: 16px;
  font-family: 'Microsoft YaHei';
}